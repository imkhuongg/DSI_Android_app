<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái đã chọn -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Màu nền của radio khi đã chọn -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- Màu viền khi đã chọn -->
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>

    <!-- Trạng thái chưa chọn -->
    <item android:state_checked="false">
        <shape android:shape="oval">

            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- Màu viền khi chưa chọn -->
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
</selector>
