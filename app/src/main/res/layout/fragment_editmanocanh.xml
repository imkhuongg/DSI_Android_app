<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa\nManocanh"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/porfolio_icon"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/MainColor"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/porfolio_icon"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        android:src="@drawable/icon_porfolio"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView4" />
  <com.google.android.material.button.MaterialButton
      android:id="@+id/nav_model"
      android:layout_width="0dp"
      app:layout_constraintWidth_percent="0.35"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/MainColor"
      android:textColor="@color/white"
      android:text="Mặt trước"
      android:textAllCaps="false"
      app:cornerRadius="30dp"
      app:layout_constraintTop_toBottomOf="@+id/porfolio_icon"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintHorizontal_bias="0.93"
      />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        android:src="@drawable/model_front"
        app:layout_constraintTop_toBottomOf="@+id/g2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/g3">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/chon_vay_ngan"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chonvayngan"/>
           <ImageView
               android:id="@+id/chon_dang"
               android:layout_width="100dp"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:layout_marginTop="-13dp"
               android:layout_marginHorizontal="10dp"
               android:clickable="true"
               android:src="@drawable/icon_chon_dang"/>
           <ImageView
               android:id="@+id/chon_toc"
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_toc"/>
           <ImageView
               android:id="@+id/chon_vay_dai"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_vaydai"/>
           <ImageView
               android:id="@+id/chon_ao"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_ao"/>
           <ImageView
               android:id="@+id/chon_quan"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_quan"/>
           <ImageView
               android:id="@+id/chon_giay"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_giay"/>
           <ImageView
               android:id="@+id/chon_kinh"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_kinh"/>
           <ImageView
               android:id="@+id/chon_tui"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_tui"/>
           <ImageView
               android:id="@+id/chon_khuyen_tai"
               android:layout_width="wrap_content"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:clickable="true"
               android:src="@drawable/icon_chon_khuyen_tai"/>
       </LinearLayout>

    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>